server {
    server_name api.regrade.net;

    listen 443 ssl;
    ssl_certificate     /etc/letsencrypt/live/api.regrade.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.regrade.net/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam         /etc/letsencrypt/ssl-dhparams.pem;

    # --- WebSocket endpoint for Realtime ---
    location /realtime/v1/websocket {
        proxy_pass         http://localhost:8000;
        proxy_http_version 1.1;
        proxy_set_header   Upgrade $http_upgrade;
        proxy_set_header   Connection "upgrade";

        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;

        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
    }

    # --- Everything else goes to the API normally ---
    location / {
        proxy_pass         http://localhost:8000;
        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
    }
}

server {
    listen 80;
    server_name api.regrade.net;

    if ($host = api.regrade.net) {
        return 301 https://$host$request_uri;
    }

    return 404;
}
