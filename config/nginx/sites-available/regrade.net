server {
    server_name regrade.net;

    location / {
        proxy_pass http://localhost:3000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        
        # --- THIS IS THE FIX ---
        # These directives enable WebSocket proxying
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        # --- END OF FIX ---
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/regrade.net/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/regrade.net/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = regrade.net) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name regrade.net;
    return 404; # managed by Certbot
}
